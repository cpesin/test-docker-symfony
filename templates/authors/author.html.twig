{% extends 'base.html.twig' %}

{% block title %}{{ author.firstname }} {{ author.lastname }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_authors') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app_authors') }}
{% endblock %}

{% block body %}
    <h2>Liste des articles de {{ author.firstname }} {{ author.lastname }}</h2>
    <div class="list">
        {% for article in author.articles %}
        <div class="article">
            <h3><a href="{{ path('app_article', { 'id': article.id }) }}">{{ article.title }}</a></h3>
            <p>Créé le {{ article.createdAt | format_datetime(locale='fr') }}</p>
        </div>
        {% endfor %}
    </div>
{% endblock %}