{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des auteurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Gestion des auteurs</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
              <a href="{{ path('admin_authors_new') }}" class="link-info">+ Ajouter un auteur</a>
          </div>
        </div>
      </div>

      <h2>Liste des auteurs</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Pr√©nom</th>
              <th scope="col">Nom</th>
              <th scope="col">Email</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            {% for author in authors %}
            <tr>
              <td>{{ author.id }}</td>
              <td>{{ author.firstname }}</td>
              <td>{{ author.lastname }}</td>
              <td>{{ author.email }}</td>
              <td>
                {{ include('admin/_partials/_author_delete_form.html.twig') }}
                <a href="{{ path('admin_authors_edit', {id: author.id}) }}" class="btn btn-success">Modifier</a>
              </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
{% endblock %}
