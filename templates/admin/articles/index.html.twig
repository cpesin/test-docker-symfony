{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}    
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Gestion des articles</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
              <a href="{{ path('admin_articles_new') }}" class="link-info">+ Ajouter un article</a>
          </div>
        </div>
      </div>

      <h2>Liste des articles</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Titre</th>
              <th scope="col">Auteur</th>
              <th scope="col">Etat</th>
              <th scope="col">Cr√©ation</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for article in articles %}
            <tr>
              <td>{{ article.id }}</td>
              <td>{{ article.title }}</td>
              <td>{{ article.author.firstname }} {{ article.author.lastname }}</td>
              <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" {% if article.state == 1 %}checked{% endif %} disabled>
                </div>
              </td>
              <td>{{ article.created | format_datetime(locale='fr') }}</td>
              <td>
                {{ include('admin/_partials/_article_delete_form.html.twig') }}
                <a href="{{ path('admin_articles_edit', {id: article.id}) }}" class="btn btn-success">Modifier</a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
{% endblock %}